{
  "name": "expense-management-app",
  "version": "1.0.0",
  "description": "Full-stack Expense Management Application with Advanced Features",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run start --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "start": "npm run start:backend",
    "start:frontend": "npm run start --workspace=frontend",
    "start:backend": "npm run start --workspace=backend",
    "build": "npm run build --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "test": "npm run test --workspace=frontend && npm run test --workspace=backend",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "npm run test --workspace=backend",
    "install:all": "npm install && npm install --workspace=frontend && npm install --workspace=backend",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "rm -rf frontend/node_modules frontend/build",
    "clean:backend": "rm -rf backend/node_modules",
    "migrate": "npm run migrate --workspace=backend",
    "seed": "npm run seed --workspace=backend",
    "lint": "npm run lint --workspace=frontend",
    "format": "prettier --write ."
  },
  "keywords": [
    "expense-management",
    "react",
    "nodejs",
    "express",
    "sqlite",
    "ocr",
    "chart.js",
    "tailwindcss",
    "full-stack"
  ],
  "author": "Expense Management Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Viraj0711/OdooHack.git"
  },
  "bugs": {
    "url": "https://github.com/Viraj0711/OdooHack/issues"
  },
  "homepage": "https://github.com/Viraj0711/OdooHack#readme"
}